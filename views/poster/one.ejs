<%- include('../layout/header.ejs') %>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <div class="container mb-5 mtt">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <img
                src="../<%= poster.image %>"
                class="rounded mt-lg-3 mb-lg-3 img-fluid img-poster-page mx-auto d-block"
                alt="<%= poster.title %>"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="container mb-5">
        <div class="row">
          <div class="col-lg-12">
            <div class="row">
              <div class="card">
                <div class="mb-3">
                  <p class="card-text">
                    <small class="text-muted"
                      >Joylangan sana - <%= poster.createdAt.toLocaleString()
                      %></small
                    >
                  </p>
                </div>
                <h3 class="poster-page-title"><%= poster.title %></h3>
                <h1 class="poster-page-amount mb-5">
                  <%- poster.amount %> SO'M
                </h1>
                <h5>Tavsif</h5>
                <p><%- poster.description %></p>
                <hr />
                <div class="d-flex justify-content-between">
                  <p>ID: <%= poster.id %></p>
                  <p>Ko'rildi: <%= poster.visits %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="container mb-5 mtt">
        <div class="row">
          <div class="card p-3">
            <h4 class="mb-5">Foydalanuvchi</h4>
            <div class="d-flex justify-content-between">
              <img
                src="/assets/noAvatar.png"
                class="rounded-circle img-fluid"
                alt="Cinque Terre"
                style="width: 100px; height: 100px"
              />
              <div class="d-flex flex-column">
                <a href="/profile/<%= author._id %>"
                  ><h5><%= author.username %></h5></a
                >
                <p>
                  Saytda: <%= author.createdAt.toLocaleDateString() %> dan beri
                </p>
                <p>E'lonlar soni: <%= author.posters.length %> ta</p>
              </div>
            </div>
            <a href="#" type="button" class="btn btn-outline-secondary"
              ><%= author.phone %></a
            >
            <a
              href="/profile/<%= author._id %>"
              type="button"
              class="btn mt-3 btn-success"
              >Muallifning boshqa e'lonlari</a
            >
            <% if (user && author && user._id && author._id &&
            user._id.toString() === author._id.toString()) { %>
            <a
              href="/posters/<%= poster._id %>/edit"
              type="button"
              class="btn mt-3 btn-warning"
              >Eloni ozgartirish</a
            >
            <% } else { %> <% } %> <% if (user && author && user._id &&
            author._id && user._id.toString() === author._id.toString()) { %>
            <form
              class="d-grid"
              action="/posters/<%= poster._id %>/delete"
              method="POST"
            >
              <button type="submit" class="btn mt-3 btn-danger">
                O'chirish
              </button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../layout/footer.ejs') %>
